<h1>投稿一覧</h1>
<%# <%= render @travels %>
<table>
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">タイトル</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @travels.each.with_index(1) do |travel, i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= travel.country %></td>
        <td>
          <%= link_to "詳細", travel %>
          <%= link_to "編集", edit_travel_path(travel) %>
          <%= link_to "削除", travel, method: :delete, data: { confirm: "削除しますか?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
