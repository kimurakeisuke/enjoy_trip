<%= form_with model: @travel, local: true, id: "travel-form" do |form| %>
  <div class="form-group">
    <%= form.label :country, "国名" , class: "font-size" %>
    <%= form.text_field :country, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :region, "地域" , class: "font-size" %>
    <%= form.text_field :region, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :city, "都市", class: "font-size" %>
    <%= form.text_field :city, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :travel_plan, "旅行プラン" , class: "font-size" %>
    <%= form.text_area :travel_plan, class: "form-control", rows: 2 %>
  </div>
  <p>
    <%#= form.label :travel_details %>
    <%# model: @travel_detailsとしてあげることで@travel.travel_details.order(:id)の内容を取得できるようになったので表示の順番が正常になる%>
    <%= form.fields :travel_details, model: @travel_details do |travel_detail| %>
      <% render "travel_detail_fields", f: travel_detail %>
    <% end %>
  </p>
  <p>
    <%= link_to_add_association "＋ 写真とコメントを追加", form, :travel_details, class: "image-content"  %>
  </p>
  <p><%= form.submit "送信" , class: "send" %></p>
<% end %>
